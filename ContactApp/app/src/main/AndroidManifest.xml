<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.developtech.contactapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".contactapp.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".contactapp.ListContacts" />
        <activity android:name=".contactapp.AddContactActivity" />
        <activity
            android:name="com.d.activity_view"
            android:label="@string/title_activity_activity_view"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".contactapp.activity_view"
            android:label="@string/title_activity_activity_view"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
