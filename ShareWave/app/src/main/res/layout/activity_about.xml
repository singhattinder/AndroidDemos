<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

   <Button
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@drawable/about_background"
       android:hint="Version"
       android:textSize="18sp"
       android:textAlignment="textStart"
       android:layout_gravity="start"
       android:paddingLeft="30dp"

       />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/about_background"
        android:hint="Show License"
        android:textSize="18sp"
        android:textAlignment="textStart"
        android:layout_gravity="start"
        android:paddingLeft="30dp"

        />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/about_background"
        android:hint="Show Terms and Conditions"
        android:textSize="18sp"
        android:textAlignment="textStart"
        android:layout_gravity="start"
        android:paddingLeft="30dp"

        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/about_background"
        android:hint="Show Privacy Policy"
        android:textSize="18sp"
        android:textAlignment="textStart"
        android:layout_gravity="start"
        android:paddingLeft="30dp"

        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Follow Us On"
        android:textSize="15sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="30dp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"

            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/facebook_icn"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/google_icn"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/twitter_icn"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>


    </LinearLayout>

